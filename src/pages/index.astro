---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Adbanner from '../components/Adbanner.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Welcome</h1>
			<p>
				This is the <a href="https://raceplay.site/">raceplay.site</a> Preview Library
			</p>
			<Adbanner></Adbanner>
			<p>
				Previews are on the twitter feed<!--<a href="/blog">preview</a> section for some of the vids we have in the library-->
				Go to <a href="/subscribe">subscribe</a> to get access.
				<!--You can go to the Preview section to browse what we have.-->
			</p>
			<p>
				Main social medias are <a href="https://twitter.com/RaceplayVideos"
					>Twitter
				</a> and <a href="https://t.me/RaceplayClips">join the Telegram</a>
			</p>
			
		</main>
		<Footer />
	</body>
</html>
