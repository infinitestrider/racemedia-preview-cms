---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 60%;
				background-color: ;
				margin-bottom: 128px;
				box-shadow: none;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li *:hover {
				color: grey;
			}
			ul li:first-child {
				width: %;
				margin-bottom: 1rem;
				text-align: left;
				color: white;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 10px;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 4px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
				color: rgb(255, 255, 255);
			}
			.date {
				margin: 0;
				color: rgba(255, 255, 255, 0.788);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: white;
			}
			ul a:hover img {
				box-shadow: ;
			}
			.video_paragraph_header2 {
				text-align: left; 
				margin-left: auto;
				margin-right: auto;
				width: 100%;
				max-width: fit-content;
				margin-bottom: 20px;
				margin-top: 10px;
				font-size: 10px;
				color: white;
				padding-top: 20px;
				padding-bottom: 20px;
				padding-left: 30px;
				padding-right: 30px;
				border-radius: 8px;
				background-color: #080808c5;
			}
			.video_paragraph_header2 a {
					color: #0077CC;
					text-decoration: none;
			}
			.video_paragraph_header2 a:hover {
					color: #0095ff;
					text-decoration: none;
			}
			@media (max-width: 720px) {
				main {
					margin-top: 160px;
					margin-bottom: 200px;
					width: 99%;
				}
				ul {
					gap: 0.5em;
				}
				 li {
					width: 100%;
					text-align: center;
				}
				 li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 10px;
				}
				.video_paragraph_header2 {
					font-size: 70%;
					padding: 5%;
					border-radius: 5px;
					margin-right: 7%;
			    }
				.video_paragraph_header2 a {
					
			    }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!---Head display
			<div class="video_paragraph_header2"> â€¢ You can choose to buy and keep the entire library permanently for a discounted price of $1.50 per video, which would be $205 for all 137+ videos. We want to keep things affordable, so take a look at the previews we have posted so far and see if it's worth it for you. Your support means a lot to us! <a href="https://pul.ly/b/320274">Buy all</a></div>
			<!---Head display end -->
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
